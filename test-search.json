---
layout: none
---
[
  {% assign search_items = site.documents | where_exp: "item", "item.collection == 'posts' or item.collection == 'projects'" %}
  {% for item in search_items %}
  {
    "title"    : {{ item.title | jsonify }},
    "category" : {{ item.collection | jsonify }},
    "tags"     : {{ item.tags | join: ', ' | jsonify }},
    "url"      : {{ item.url | absolute_url | jsonify }},
    "date"     : {{ item.date | date: '%-d %B %Y' | jsonify }},
    "content"  : {{ item.content | strip_html | strip_newlines | jsonify }}
  }{% unless forloop.last %},{% endunless %}
  {% endfor %}
]
